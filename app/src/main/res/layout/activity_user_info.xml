<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/user">
    <LinearLayout
        android:id="@+id/user_title_linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/username_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="用户名"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp" />
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/Black"/>
        <TextView
            android:id="@+id/password_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="密码"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp" />
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/Black"/>
        <TextView
            android:id="@+id/power_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="权限"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/devide_line_tv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/user_title_linear"
        android:background="@android:color/background_dark" />

    <ListView
        android:id="@+id/user_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12" />

    <Button
        android:id="@+id/exit_bt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_selector2"
        android:text="返 回"
        android:textColor="@color/White"
        android:textSize="20sp" />

</LinearLayout>
